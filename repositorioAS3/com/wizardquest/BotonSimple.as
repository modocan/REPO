package com.wizardquest{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	public class BotonSimple extends MovieClip {		public function BotonSimple() {			this.stop();			this.buttonMode=true;			this.mouseChildren=false;			this.addEventListener(MouseEvent.ROLL_OVER,onRoll);			this.addEventListener(MouseEvent.ROLL_OUT,onOut);		}		private function onRoll(event:MouseEvent) {			if (this.buttonMode==true) {				this.gotoAndPlay("entrada");			}		}		private function onOut(event:MouseEvent) {						if (this.buttonMode==true) {				this.gotoAndPlay("salida");			}		}			}}